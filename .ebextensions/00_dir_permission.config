files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/00_permissions.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      chmod 755 /var/app/current/node_modules/.bin
      chown -R nodejs:nodejs /var/app/current/node_modules/.bin
      chown -R nodejs:nodejs /tmp/.npm
      chown -R nodejs:nodejs /tmp/.config
      